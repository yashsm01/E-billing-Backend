<body>
  <!--Start Header-->
  <header class="clearfix">
    <div id="logo">
      <img src="<%= value.logo %>" alt="logo" ></img>
    </div>
    <div id="company">
      <h2 class="name">VLCC Personal Care Limited</h2>
      <div>Khasra No.109/18/1,GF,Ranhola</div>
      <div>Road,Village Mundka, NEW DELHI, DL,</div>
      <div>110041, IND</div>
      <div><strong>CIN No.</strong>U52212DL2000PLC107566</div>
    </div>
  </header>
  <!--End Header-->
  <main>
    <div id="company_details" class="clearfix">
      <h2 class="w-100 text-center">Consignment Detail</h2>
      <div class="w-50">
        <div>Invoice No. <span><%=value.invoiceNo%></span></div>
      </div>
      <div style="float: right;">        
        <div>Invoice Date:  <span><%=value.invoiceDate%></span></div>
      </div>
    </div>
    <div id="details" class="clearfix">
      <div class="client">
        <div class="to">INVOICE TO:</div>
        <h2 class="name"><%= value.invoiceTo %></h2>
        <!-- <div class="address">Reliance Retail Limited</div> -->
        <hr />
        <div class="to"><strong>Contact Person : </strong><%=value.contactPerson %></div>
        <div class="to"><strong>Contact No. : </strong><%=value.contactNo %></div>
      </div>
      <div style="float: right;">        
        <img src="<%= value.invoiceQr %>" width="65" alt="Invoice QR Code" ></img>
      </div>
    </div>
        
        <% for(var i=0; i < value.skudetail.length; i++) { %>
            <table border="1" cellspacing="0" cellpadding="0" style="margin-bottom: 6%;">
                <thead>
                  <tr>
                    <th class="unit">Item No.</th>
                    <th class="unit">DESCRIPTION</th>
                    <th class="unit">SKU Id</th>
                    <th class="unit">Batch No.</th>
                    <th class="unit">Units</th>
                  </tr>
                </thead>
                <tbody>     
          <tr>
              <td><%=i+1%></td>
              <td><%= value.skudetail[i].desc %></td>
              <td><%= value.skudetail[i].skuId %></td>
              <td><%= value.skudetail[i].batchNo %></td>
              <td><%= value.skudetail[i].units %></td>
            </tr>
            <tr>
                <td colspan="5" class="prod">Product Codes</td>
            </tr>
                <% let s = 0;  %>
                <% for(let j=0; j < value.skudetail[i].codes.length; j++) { %>
                    <% if (j == s) { %>
                        <tr style="page-break-before:auto; position:relative;">
                    <% } %>

                    <td style="padding-left:2px; padding-right:2px;"><%= value.skudetail[i].codes[j] %></td>
                    
                    <% if (j == (s+4) || j == value.skudetail[i].codes.length-1) { s += 5; %>                        
                        </tr>
                    <% } %>
                <% } %>    
            </tbody>
        </table>  
        <% } %>     
    

    
    <br/><br/>
  </main>
